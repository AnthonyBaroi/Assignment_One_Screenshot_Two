<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e4e4e4"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="30dp"
            android:text="Discovery"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_button1"
            android:drawableTop="@drawable/beer"
            android:paddingTop="30dp"
            android:paddingBottom="25dp"
            android:text="Bars &amp; Hotels 42 Place"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/custom_button1"
            android:drawableTop="@drawable/tray"
            android:paddingTop="30dp"
            android:paddingBottom="25dp"
            android:text="Fine Dining     15 Place"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button2" />

        <Button
            android:id="@+id/cafe"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/custom_button1"
            android:drawableTop="@drawable/distance"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:text="Nearby           34 Place "
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="#FFDB58"
            app:layout_constraintBottom_toBottomOf="@+id/nearby"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/nearby"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/nearby"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_button1"
            android:drawableTop="@drawable/cafe"
            android:paddingTop="30dp"
            android:paddingBottom="25dp"
            android:text="Cafes             28 Place"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/cafe"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_button1"
            android:drawableTop="@drawable/fastfood"
            android:paddingTop="30dp"
            android:paddingBottom="25dp"
            android:text="Fast Foods      29 Place"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/button7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nearby" />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/custom_button1"
            android:drawableTop="@drawable/pizza"
            android:paddingTop="30dp"
            android:paddingBottom="25dp"
            android:text="Featured Foods 21 Place"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button6"
            app:layout_constraintTop_toTopOf="@+id/button6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>